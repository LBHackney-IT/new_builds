<h1>Issues in <%= @scheme.name %></h1>

<%= link_to "New issue", new_scheme_issue_path(@scheme), class: 'button float-right' %>

<p><%= link_to "Trades chart", type_chart_scheme_issues_path(@scheme) %></p>

<div class="filter-box">
  <%= form_for_filterrific @filterrific do |f| %>
    <div class="grid-container">
      <div class="grid-x grid-padding-x">
        <div class="medium-4 cell">
          <%= label_tag(:search_query, "Keyword search") %>
          <%= text_field_tag(:search_query) %>
        </div>
        <div class="medium-3 cell">
          <%= f.select(:status_filter, @filterrific.select_options[:statuses], include_blank: true) %>
        </div>
        <div class="medium-2 cell">
          <label>Priority
            <input type="text" placeholder="Select priority">
          </label>
        </div>
        <div class="medium-3 cell">
          <label>Trade
            <input type="text" placeholder="Select priority">
          </label>
        </div>
      </div>
      <div class="grid-x grid-padding-x">
        <div class="medium-6 cell">
          <%= f.select(:location, @filterrific.select_options[:locations], include_blank: true) %>
        </div>
        <div class="medium-6 cell">
          <label>Flat number
            <input type="number" placeholder="Enter flat number">
          </label>
        </div>
      </div>
      <div class="grid-x grid-padding-x">
        <div class="medium-3 cell">
        Show overdue only
          <%= f.check_box :overdue_filter %>
        </div>
        <div class="medium-3 cell">
          <%= f.select(:reported_by, @filterrific.select_options[:users], include_blank: true) %>
        </div>
        <div class="medium-3 cell">
          <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
        </div>
        <div class="medium-3 cell">
          <%= f.submit 'Filter', class: 'button expanded filter-btn' %>

        </div>
      </div>
      <div class="grid-x grid-padding-x">
        <div class="cell">
          <%= link_to(
            'Reset filters',
            reset_filterrific_url, class: 'float-right'
          ) %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<p><%= @issues.count %> Issues.</p>

<table class="shadow">
  <thead>
    <tr>
      <th>URN</th>
      <th>Reported by</th>
      <th>Date reported</th>
      <th>Resident</th>
      <th>Description</th>
      <th>Trade</th>
      <th>Priority</th>
      <th>Due at</th>
      <th>Status</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @issues.each do |issue| %>
      <tr class="<%= issue.overdue_or_status %>">
        <td><%= issue.urn %></td>
        <td><%= issue.user.email %></td>
        <td><%= issue.created_at.to_s(:short) %></td>
        <td><%= issue.resident.name %></td>
        <td><%= truncate issue.description %></td>
        <td><%= issue.trade %></td>
        <td><%= issue.scheme_priority.name %></td>
        <td>
          <%= issue.due_at.to_s(:short) %>
        </td>
        <td>
          <% if issue.overdue? %>
            <%= time_ago_in_words(issue.due_at) %>
            overdue
          <% else %>
            <%= issue.status %>
          <% end %>
        </td>
        <td><%= issue.location.name %></td>
        <td><%= link_to "View", scheme_issue_path(@scheme, issue) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @issues, renderer: FoundationPagination::Rails %>
